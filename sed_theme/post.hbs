{{!< default}}
{{#post}}
<main class="clearfix">
	<article class="{{post_class}}">
		{{#if feature_image}}
		<div class="post-image" style="background-image: url({{feature_image}}); background-size: cover">
		</div>
		{{/if}}
		<div class="post-wrap">
			<header class="post-header">
				<span>{{t "Written by"}} {{authors}}</span>
				<time class="blog-date" datetime="{{date format="YYYY-MM-DDTHH:mm:ss.SS\Z"}}"> &mdash; {{date format="DD MMMM YYYY"}}</time>
				<h1 class="post-title">{{title}}</h1>
			</header>
			<section class="post-content">
				{{content}}
			</section>
			<footer>
				<div class="post-meta-hr">
					<hr>
				</div>
				<div class="post-meta">
					<div class="post-author">{{t "Read more posts by"}} {{authors}}</div>
					<section class="post-share">
						<a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
							onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;"><i class="twitter"></i>
						</a>
						<a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
							onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;"><i class="facebook"></i>
						</a>
						<a href="https://plus.google.com/share?url={{url absolute="true"}}"
							onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;"><i class="google-plus"></i>
						</a>
					</section>
				</div>
				{{#if tags}}
				<div class="post-tag">
					{{tags separator=""}}
				</div>
				{{/if}}
			</footer>
		</div>
	</article>
	{{^has tag="#disqus-off"}}
	<div class="disqus">
		{{>disqus}}
	</div>
	{{/has}}
</main>
{{>readnext}}
{{/post}}