<aside class="read-next">
    {{#next_post}}
    <a class="previous-post pull-left {{#if feature_image}}" style="background-image: url({{feature_image}}){{else}}no-image{{/if}}" href="{{url}}">
        <section class="read-next-text">
		   <span class="link-text">{{t "Newer Post"}}</span>
            <h3>{{title}}</h3>
      </section>
    </a>
    {{/next_post}}
    {{#prev_post}}
   <a class="next-post pull-right {{#if feature_image}}" style="background-image: url({{feature_image}}){{else}}no-image{{/if}}" href="{{url}}">
        <section class="read-next-text">
		   <span class="link-text">{{t "Older Post"}}</span>
            <h3>{{title}}</h3>
        </section>    
    </a>
    {{/prev_post}} 
</aside>