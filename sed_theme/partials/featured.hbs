{{#get "posts" limit="all" filter="featured:true+page:[true,false]"}}
{{#foreach posts}}
<article class="featured-top featured-bg clearfix">
	<div class="content{{#if feature_image}}" style="background-image: url({{feature_image}}); background-size: cover{{/if}}">
		<div class="{{#if feature_image}}overlay-featured{{/if}}">
			<div class="left">
				<h2><a href="{{url}}">{{title}}</a></h2>
			</div>
			<div class="right">
				<div class="container">
					<h2><a href="{{url}}">{{t "Read more"}}</a></h2>
				</div>
			</div>
		</div>
	</div>
</article>
{{/foreach}}
{{/get}}