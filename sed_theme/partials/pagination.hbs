<div class="pagination clearfix" role="navigation">
	{{#if prev}}
	<a class="newer-posts" href="{{page_url prev}}"> <i class="arrow long-arrow-left"></i> {{t "Newer Posts"}}</a>
	{{/if}}
	<span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
	{{#if next}}
	<a class="older-posts" href="{{page_url next}}">{{t "Older Posts"}} <i class="arrow long-arrow-right"></i></a>
	{{/if}}
</div>